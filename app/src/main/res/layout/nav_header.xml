<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/header_nav">

    <ImageView
        android:id="@+id/ivHeader"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        tools:src="@drawable/rubab"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ivProfile"
        android:layout_width="65dp"
        android:layout_height="65dp"
        tools:src="@drawable/logo_twitter"
        app:civ_border_width="1dp"
        tools:civ_border_color="@color/twitterColor"
        android:layout_above="@+id/tvProfileName"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Kevin Durant"
        android:id="@+id/tvProfileName"
        android:textStyle="bold"
        android:gravity="left"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_above="@+id/tvUserName"
        android:layout_marginLeft="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        tools:text="\@kdtrey5"
        android:id="@+id/tvUserName"
        android:gravity="left"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_alignBottom="@id/ivHeader"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="18dp"/>




</RelativeLayout>